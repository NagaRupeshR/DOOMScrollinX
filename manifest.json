{
    "name": "NO more doom scrolling",
    "version": "0.1.0",
    "description": "Initiative to overcome DOOMSCROLLING",
    "permissions": ["tabs"],
    "host_permissions": ["https://*.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["assets/replace.jpg"],
        "matches": ["https://*.youtube.com/*"]
      }
    ],
    "action": {
      "default_icon": {

      },
      "default_title": "U R all set WARRIOR"

    },
    "manifest_version": 3
}
